<%- include("header") -%>
<div class="box" id="heading">
	<h1><%=listTitle%></h1>
</div>
<div class="box">
		<% Item.forEach(function(e){%>
		<form action="/delete" method="post">
			<div class="item">
				<input type="checkbox" name="checkbox" value="<%= e._id %>" onChange="this.form.submit()">
				<p><%= e.name %></p>
			</div>
			<input type="hidden" name="listname" value="<%= listTitle %>"></input>
			<!-- type hidden input is not visible but we can use this -->
			<!-- it is not self closing -->
		</form>
		<% }); %>

	<form class="item" action="/" method="post">
		<input type="text" name="listitem" placeholder="New item" autocomplete="off">
		<button type="submit" name="list" value="<%= listTitle %>">+</button>
	</form>	
</div>
<%- include("footer") -%>
